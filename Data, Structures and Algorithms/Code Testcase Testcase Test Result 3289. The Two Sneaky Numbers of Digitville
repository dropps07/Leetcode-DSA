class Solution {
    public int[] getSneakyNumbers(int[] nums) {
        List<Integer> l = new ArrayList<>();
        Map<Integer, Integer> map = new HashMap<>();
        
        for (int x : nums) {
            map.put(x, map.getOrDefault(x, 0) + 1);
        }
        
        for(int key : map.keySet()){
            if(map.get(key) == 2){
                l.add(key);
            }
        }
        int res[] = new int[l.size()];
        for(int i =0;i<l.size();i++){
            res[i] = l.get(i);
        }
        return res;
    }
}
