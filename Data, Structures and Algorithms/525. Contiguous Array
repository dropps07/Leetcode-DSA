class Solution {
    public int findMaxLength(int[] nums) {
        Map<Integer, Integer> map = new HashMap<>();
        map.put(0, -1);
        int sum=0;
        int max=0;
        int n = nums.length;
        for(int i =0;i<n;i++){
            sum+=nums[i]==0? 1: -1;
            if(map.containsKey(sum)){
                max = Math.max(i-map.get(sum), max);
            }else {
                map.put(sum, i);
            }
        }
        return max;
    }
}
