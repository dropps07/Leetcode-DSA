class Solution {
    public boolean threeConsecutiveOdds(int[] arr) {
        int len = arr.length-2; // cuz we will be checking for i+2, to prevent out of bounds error
        for(int i=0;i<len;i++){
            if(arr[i]%2!=0 && arr[i+1]%2!=0 && arr[i+2]%2!=0){
                return true;
            }
        } return false;
    }
}
