class Solution {
    public int dayOfYear(String date) {
        int [] days = { 31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31 };
        //extract y, m ,d from input
        int y = Integer.parseInt(date.substring(0, 4)); //"2023"
        int m = Integer.parseInt(date.substring(5, 7)); //index 4 is "_" 
        int d = Integer.parseInt(date.substring(8,10)); //8-9 are date
        //check if its a leap year
        if((y % 4==0 && y % 100 != 0) || (y % 400==0)){
            days[1] = 29;
        }
        for(int i=0;i<m-1;i++){
            d+=days[i];
        }
        return d;
    }
}
