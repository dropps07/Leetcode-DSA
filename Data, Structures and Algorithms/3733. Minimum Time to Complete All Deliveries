class Solution {
    public long minimumTime(int[] d, int[] r) {
        long low=0;
        long high = (long)1e18;
        long ans = (long)1e18;
        while(low<=high){
            long mid = low + (high-low)/2;
            if(check(mid,d,r)){
                ans = Math.min(ans,mid);
                high = mid-1; //backtracking
            }else{
                low = mid+1;
            }
        }
        return ans;
    }
    public boolean check(long time, int[] d, int[] r){
        long w1 = time - time/r[0];
        long w2 = time - time/r[1];

        if(d[0]>w1 || d[1]> w2){
            return false;
        }
        long both = time/(lcm(r[0],r[1]));
        return d[0] + d[1] <= time - both;
    }
    private long gcd(long a, long b){
        if(b==0) return a;
        return gcd(b, a%b);
    }
    private long lcm(long a, long b){
        return a / gcd(a,b) * b;
    }
}
